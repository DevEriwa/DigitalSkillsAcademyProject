@model IEnumerable<Core.Models.ApplicantDocumment>
@{
	ViewData["Title"] = "Documentation";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>

	body {
		counter-reset: Serial; /* / Set the Serial counter to 0 /*/
	}

	tr td:first-child:before {
		counter-increment: Serial; /* / Increment the Serial counter /*/
		content: counter(Serial); /*  / Display the counter /*/
	}
</style>

<!-- Page Header -->
<div class="page-header">
	<div class="row">
		<div class="col-sm-12">
			<h3 class="page-title">Student Documentations</h3>
		</div>
	</div>
</div>
<!-- /Page Header -->


<div class="row">
	<div class="col-md-12">
		@if (@Model.Count() > 0 && Model != null)
		{
			<div class="table-responsive">
				<table class="table table-striped custom-table mb-0 datatable">
					<thead>
						<tr>
							<th>S/N</th>
							<th>Full Name</th>
							<th>Email</th>
							<th>BVN</th>
							<th class="text-center">Download Nepa Bill</th>
							<th class="text-center">Download 1St Guarantor</th>
							<th class="text-center">Download 2nd Guarantor</th>
							<th class="text-center">Download Contract</th>
							<th>Status</th>
							<th class="text-center">Actions</th>

						</tr>
					</thead>
					@foreach (var doc in Model)
					{
						<tbody>
							<tr>
								<td></td>
								<td>@doc.Students.FullName</td>
								<td>@doc.Students.Email</td>
								<td>@doc.BVN</td>
								<td class="text-center">
									<a href="@doc.NepaBill" class="btn newBtn download-offer" download><span><i class="fa fa-download fafaColor mr-1"></i> Nepa Bill</span></a>
								</td>
								<td class="text-center">
									<a href="@doc.FirstGuarantor" class="btn newBtn download-offer" download><span><i class="fa fa-download fafaColor mr-1"></i> 1St Guarantor</span></a>
								</td>
								<td class="text-center">
									<a href="@doc.SecondGuarantor" class="btn newBtn download-offer" download><span><i class="fa fa-download fafaColor mr-1"></i> 2nd Guarantor</span></a>
								</td>
								<td class="text-center">
									<a href="@doc.SignedContract" class="btn newBtn download-offer" download><span><i class="fa fa-download fafaColor mr-1"></i> Signed Contract</span></a>
								</td>
								<td>@doc.IsApproved</td>
								<td class="text-center">
									<div class="dropdown dropdown-action">
										<a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="material-icons">more_vert</i></a>
										<div class="dropdown-menu dropdown-menu-right">
											<a class="dropdown-item" href="#" data-toggle="modal" data-target="#accept_application" onclick="ApproveApplicantDocuments('@doc.Id')"><i class="fa fa-check-circle m-r-5 text-success"></i>Approve</a>
											<a class="dropdown-item" href="#" data-toggle="modal" data-target="#decliine_application" onclick="DeleteDocument('@doc.Id')"><i class="fa fa-trash-o m-r-5 text-danger"></i>Delete</a>
										</div>
									</div>
								</td>
						</tbody>
					}
				</table>
			</div>
		}
		else
		{
			<div cclass="row p5 m-5">
				<div class="col-md-12 text-center p-5 m5">
					<h2>No Record Found</h2>
				</div>
			</div>
		}
	</div>
</div>
<!-- /Content End -->
